<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTruckGui"
        x:Class="KTruckGui.WorkOrdersWindow"
        Title="Work Order Management" Height="1020" Width="1200"
        WindowStartupLocation="CenterScreen">

    <!-- Window Resources -->
    <Window.Resources>
        <!-- Colors -->
        <Color x:Key="PrimaryColor">#3498db</Color>
        <Color x:Key="PrimaryDarkColor">#2c3e50</Color>
        <Color x:Key="PrimaryLightColor">#e8f6ff</Color>
        <Color x:Key="SecondaryColor">#2ecc71</Color>
        <Color x:Key="AccentColor">#e74c3c</Color>
        <Color x:Key="WarningColor">#f39c12</Color>
        <Color x:Key="WarningLightColor">#fff8e1</Color>
        <Color x:Key="LightGrayColor">#e9ecef</Color>
        <Color x:Key="ExtraLightGrayColor">#f8f9fa</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
        <SolidColorBrush x:Key="WarningLightBrush" Color="{StaticResource WarningLightColor}"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGrayColor}"/>
        <SolidColorBrush x:Key="ExtraLightGrayBrush" Color="{StaticResource ExtraLightGrayColor}"/>

        <!-- Style for text headers -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Style for form labels -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style for buttons -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for secondary buttons -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
        </Style>

        <!-- Style for warning buttons -->
        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
        </Style>

        <!-- Style for danger buttons -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
        </Style>

        <!-- Style for text boxes -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for combo boxes -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for data grid -->
        <Style x:Key="WorkOrderGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource ExtraLightGrayBrush}"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- Work Order List Tab -->
            <TabItem Header="Work Orders">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header with search -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Work Orders" Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox x:Name="SearchBox" Width="250" Height="35" VerticalContentAlignment="Center" Padding="10,0" Margin="0,0,10,0"/>
                            <Button Content="Search" Width="80" Height="35" Style="{StaticResource ActionButtonStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Work Orders DataGrid -->
                    <DataGrid x:Name="WorkOrdersDataGrid" Grid.Row="1" 
                              Style="{StaticResource WorkOrderGridStyle}"
                              SelectionChanged="WorkOrdersGrid_SelectionChanged"
                              ItemsSource="{Binding ActiveWorkOrders}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Customer" Width="150">
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="Customer.FName"/>
                                        <Binding Path="Customer.LName"/>
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Vehicle" Binding="{Binding Vehicle.DisplayName}" Width="200"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate, StringFormat={}{0:MM/dd/yyyy}}" Width="120"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding UsageDate, StringFormat={}{0:MM/dd/yyyy}}" Width="100"/>
                            <DataGridTextColumn Header="Technician" Binding="{Binding TechnicianName}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="New Work Order" Width="150" Style="{StaticResource ActionButtonStyle}" Margin="5" Click="CreateWorkOrder_Click"/>
                        <Button Content="View Details" Width="120" Style="{StaticResource ActionButtonStyle}" Margin="5"/>
                        <Button Content="Delete" Width="100" Style="{StaticResource DangerButtonStyle}" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Work Order Details Tab -->
            <TabItem Header="Work Order Details">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Work Order Header -->
                        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                                Background="{StaticResource PrimaryLightBrush}" 
                                BorderBrush="{StaticResource PrimaryBrush}" 
                                BorderThickness="0,0,0,2" 
                                Padding="15,10" 
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="WorkOrderTitle" Text="Work Order #1001" FontSize="24" FontWeight="Bold"/>
                                    <TextBlock x:Name="WorkOrderSubtitle" Text="Created: 04/10/2025" Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Status:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="WorkOrderStatusComboBox" Width="150" 
                                              ItemsSource="{Binding StatusOptions}" 
                                              SelectedItem="{Binding SelectedWorkOrder.Status}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Customer & Vehicle Information -->
                        <GroupBox Grid.Row="1" Grid.Column="0" Header="Customer Information" Margin="0,0,10,15" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Customer:" Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <TextBox x:Name="CustomerNameTextBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>
                                <Button Content="..." Grid.Row="0" Grid.Column="2" Width="40" Height="35" Margin="5,0,0,10" Click="CustomerLookup_Click"/>

                                <TextBlock Text="Phone:" Grid.Row="1" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <TextBox x:Name="CustomerPhoneTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>

                                <TextBlock Text="Email:" Grid.Row="2" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <TextBox x:Name="CustomerEmailTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>

                                <TextBlock Text="Address:" Grid.Row="3" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <TextBox x:Name="CustomerAddressTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Grid.Row="1" Grid.Column="1" Header="Vehicle Information" Margin="10,0,0,15" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Vehicle:" Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <ComboBox x:Name="VehicleComboBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                  Style="{StaticResource FormComboBoxStyle}" 
                  SelectionChanged="VehicleComboBox_SelectionChanged"/>

                                <!-- VehicleInfoTextBox would typically go here -->
                                <TextBlock Text="Vehicle Info:" Grid.Row="1" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <TextBox x:Name="VehicleInfoTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>

                                <TextBlock Text="VIN:" Grid.Row="2" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <TextBox x:Name="VinTextBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>

                                <TextBlock Text="License:" Grid.Row="3" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,10"/>
                                <TextBox x:Name="LicenseTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource FormTextBoxStyle}" IsReadOnly="True"/>
                            </Grid>
                        </GroupBox>

                        <!-- Diagnostic & Repair Section -->
                        <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Diagnostic Information" Margin="0,0,0,15" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Diagnostic Notes:" Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,5"/>
                                <TextBox x:Name="DiagnosticNotesTextBox" 
                                         Grid.Row="1" Grid.Column="0" 
                                         Height="100" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True" 
                                         VerticalAlignment="Stretch" 
                                         VerticalScrollBarVisibility="Auto" 
                                         Margin="0,0,10,10"/>

                                <TextBlock Text="Repair Notes:" Grid.Row="0" Grid.Column="1" Style="{StaticResource FormLabelStyle}" Margin="0,0,10,5"/>
                                <TextBox x:Name="RepairNotesTextBox" 
                                         Grid.Row="1" Grid.Column="1" 
                                         Height="100" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True" 
                                         VerticalAlignment="Stretch" 
                                         VerticalScrollBarVisibility="Auto" 
                                         Margin="0,0,0,10"/>

                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                                    <TextBlock Text="Estimated Labor Hours:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox x:Name="LaborHoursTextBox" Width="80" Height="35" VerticalContentAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="Assigned Technician:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="TechnicianComboBox" 
                                              Width="200" 
                                              ItemsSource="{Binding Technicians}" 
                                              Style="{StaticResource FormComboBoxStyle}"/>
                                    <Button Content="Assign" 
                                            Width="80" 
                                            Height="35" 
                                            Style="{StaticResource ActionButtonStyle}" 
                                            Margin="10,0,0,10" 
                                            Click="AssignTechnician_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Parts Usage Section -->
                        <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Header="Parts Usage" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Add Part Form -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="Part:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="PartsComboBox" 
                                              Grid.Column="1" 
                                              ItemsSource="{Binding AvailableParts}" 
                                              DisplayMemberPath="Name" 
                                              SelectedValuePath="ID" 
                                              Height="35" 
                                              Margin="0,0,10,0"/>

                                    <TextBlock Text="Quantity:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBox x:Name="QuantityTextBox" Grid.Column="3" Width="80" Height="35" Margin="0,0,10,0"/>

                                    <Button Content="Add Part" 
                                            Grid.Column="4" 
                                            Width="100" 
                                            Height="35" 
                                            Style="{StaticResource SecondaryButtonStyle}" 
                                            Click="AddPart_Click"/>
                                </Grid>

                                <!-- Usage Notes -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="250"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Parts Used DataGrid -->
                                    <DataGrid x:Name="PartsUsedDataGrid" 
                                              Grid.Column="0" 
                                              Style="{StaticResource WorkOrderGridStyle}" 
                                              ItemsSource="{Binding PartsUsed}" 
                                              Margin="0,0,10,0">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Part Name" Binding="{Binding Part.Name}" Width="*"/>
                                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                                            <DataGridTextColumn Header="Unit Price" Binding="{Binding Part.Price, StringFormat=C2}" Width="100"/>
                                            <DataGridTextColumn Header="Total" Width="100">
                                                <DataGridTextColumn.Binding>
                                                    <MultiBinding StringFormat="{}{0:C2}">
                                                        <Binding Path="Part.Price"/>
                                                        <Binding Path="Quantity"/>
                                                    </MultiBinding>
                                                </DataGridTextColumn.Binding>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="Used By" Binding="{Binding TechnicianId}" Width="120"/>
                                            <DataGridTextColumn Header="Date" Binding="{Binding UsageDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="100"/>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <!-- Usage Notes -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Usage Notes:" Style="{StaticResource FormLabelStyle}"/>
                                        <TextBox x:Name="UsageNotesTextBox" 
                                                 Height="100" 
                                                 TextWrapping="Wrap" 
                                                 AcceptsReturn="True" 
                                                 VerticalAlignment="Stretch" 
                                                 VerticalScrollBarVisibility="Auto" 
                                                 Margin="0,0,0,10"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="Save Work Order" Width="150" Style="{StaticResource ActionButtonStyle}" Margin="5" Click="CreateWorkOrder_Click"/>
                            <Button Content="Generate Estimate" Width="150" Style="{StaticResource WarningButtonStyle}" Margin="5" Click="GenerateEstimate_Click"/>
                            <Button Content="Complete Work Order" Width="180" Style="{StaticResource SecondaryButtonStyle}" Margin="5" Click="CompleteWorkOrder_Click"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Reporting Tab -->
            <TabItem Header="Reports">
                <Grid Margin="10">
                    <TextBlock Text="Reports functionality will be implemented here." FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>